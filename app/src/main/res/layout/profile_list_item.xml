<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    
    <ImageView
        android:id="@+id/profile_list_item_logo"
        android:layout_width="76dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/profile_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/profile_list_item_star1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/profile_list_item_star2"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_logo"
        app:layout_constraintTop_toBottomOf="@id/profile_list_item_name"
        app:srcCompat="@drawable/fill_star"/>

    <ImageView
        android:id="@+id/profile_list_item_star2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/fill_star"
        app:layout_constraintEnd_toStartOf="@id/profile_list_item_star3"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_star1"
        app:layout_constraintTop_toBottomOf="@id/profile_list_item_name" />

    <ImageView
        android:id="@+id/profile_list_item_star3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/fill_star"
        app:layout_constraintEnd_toStartOf="@id/profile_list_item_star4"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_star2"
        app:layout_constraintTop_toBottomOf="@id/profile_list_item_name" />

    <ImageView
        android:id="@+id/profile_list_item_star4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/fill_star"
        app:layout_constraintEnd_toStartOf="@id/profile_list_item_star5"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_star3"
        app:layout_constraintTop_toBottomOf="@id/profile_list_item_name" />

    <ImageView
        android:id="@+id/profile_list_item_star5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/fill_star"
        app:layout_constraintStart_toEndOf="@id/profile_list_item_star4"
        app:layout_constraintTop_toBottomOf="@id/profile_list_item_name" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/profile_list_item_stars"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="profile_list_item_star1, profile_list_item_star2, profile_list_item_star3, profile_list_item_star4, profile_list_item_star5"/>

</androidx.constraintlayout.widget.ConstraintLayout>